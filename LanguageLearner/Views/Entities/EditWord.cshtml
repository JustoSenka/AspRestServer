@model EditEntityModel;

@{
    ViewData["Title"] = "Edit " + Model.Word.Text;
}

<div class="container">
    <form asp-controller="Entities" asp-action="UpdateWord" method="post">
        <input type="hidden" asp-for="Word.ID" value="@Model.Word.ID" />

        <partial name="_AlertMessage" for="@Model" />

        <div class="form-group">
            <div class="row">
                <div class="col">
                    <label for="Word_Text" class="col-form-label">Word</label>
                    <input type="text" class="form-control" asp-for="Word.Text" />
                </div>

                <div class="col">
                    <label for="Word_Pronunciation" class="col-form-label">Pronunciation</label>
                    <input type="text" class="form-control" asp-for="Word.Pronunciation" />
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="Word_Article" class="col-form-label">Article</label>
                    <input type="text" class="form-control" asp-for="Word.Article" />
                </div>

                <div class="col">
                    <label for="Word_AlternateSpelling" class="col-form-label">AlternateSpelling</label>
                    <input type="text" class="form-control" asp-for="Word.AlternateSpelling" />
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <label for="Word_Language">Word Language</label>
                <select class="custom-select" asp-for="LanguageID" asp-items="@Model.AvailableLanguages.SelectListItems()"></select>
            </div>
        </div>

        @{
            var listModel = new ExpandableListModel()
            {
                Title = "List of Translations",
                Elements = Model.Word.Translations.Select(t => t.Definition.Language.Name + ": " + t.Definition.Text),
            };

            <div class="form-group">
                <partial name="_ExpandableListPartial" for="@listModel" />
            </div>
        }

        <div class="form-group row">
            <div class="col">
                <button type="submit" class="btn btn-success">Update</button>
                <a class="btn btn-sm btn-secondary" asp-controller="Entities" asp-action="Word" asp-route-id="@Model.Word.ID">Cancel</a>
            </div>
        </div>
    </form>
</div>
