@model RunPracticeModel;

@{
    ViewData["Title"] = "Practice";
}

<component type="typeof(LanguageLearner.Views.Practice.Game)"
           render-mode="Server"
           param-Model="Model"
           param-Words="Model.Words.ToArray()"
           param-Title="Model.Words.First().FromText"
           param-WordsFrom="Model.Words.Select(w => w.FromText).ToArray()"
           param-Indices="Model.Words.Select(w => w.Index).ToArray()"
           param-PracticeWords="Model.Words.Select(w => new PracticeWords(w)).ToArray()"/>


@functions {
    [BindProperty(SupportsGet = true)]
    public RunPracticeModel RunModel { get; set; }
}