@model EditEntityModel;

@{
    ViewData["Title"] = "Edit " + Model.Definition.Text;
}

<script>
    window.onbeforeunload = function () {
        return true;
    };

    function disableBeforeUnload() {
        window.onbeforeunload = null;
    }
</script>

<div class="container">
    <form method="post">
        <input type="hidden" asp-for="Definition.ID" value="@Model.Definition.ID" />

        <partial name="_AlertMessage" for="@Model" />

        <div class="form-group row">
            <div class="col">
                <label for="Definition_Text" class="col-form-label">Definition</label>
                <input type="text" class="form-control" asp-for="Definition.Text" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <label for="LanguageID">Definition Language</label>
                <select class="custom-select" asp-for="LanguageID" asp-items="@Model.AvailableLanguages.SelectListItems()"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col">
                <label for="Definition_Pronunciation" class="col-form-label">Description</label>
                <textarea type="text" rows="5" class="form-control" asp-for="Definition.Description"></textarea>
            </div>
        </div>

        @* Add or Create new definition buttons with dropdown *@

        @{
            var dropdownModel = new SearcheableDropdownModel()
            {
                IsSubmit = true,
                Text = "Link to existing Word",
                AdditionalClasses = "btn btn-light text-center",
                AspController = "Entities",
                AspAction = "AddTranslationToDefinition",
                Elements = Model.Words.Select(d => new ListElement(d.Text, "", "", d.ID.ToString())),
            };
        }

        <div class="form-group row">
            <div class="col">
                <partial name="_SearcheableDropdown" model="dropdownModel" />
            </div>

            <div class="col">
                <a class="btn btn-light text-center" asp-controller="Entities" asp-action="Word" asp-route-id="@Model.Definition.ID">Create New Translation</a>
            </div>
        </div>

        @* Expandable List of Words/Translations *@

        @{
            var listModel = new ExpandableEditListModel()
            {
                Title = "List of Translations",
                Expanded = Model.ExpandTranslationList,
                Elements = Model.Definition.Translations?.Select(t => new ListElement(t.Word.Language.Name + ": " + t.Word.Text, "", "", t.ID.ToString())),
                AspRoute = Model.Definition.ID.ToString(),
                AspController = "Entities",
                AspAction = "RemoveTranslationFromDefinition",
            };

            <div class="form-group">
                <partial name="_ExpandableEditListPartial" for="@listModel" />
            </div>
        }

        @* Update, Delete, Cancel Buttons *@

        <div class="form-group row">
            <div class="col">
                <button onclick="disableBeforeUnload()" type="submit" class="btn btn-success" asp-controller="Entities" asp-action="UpdateDefinition">Update</button>
                <a class="btn btn-sm btn-secondary" asp-controller="Entities" asp-action="Definition" asp-route-id="@Model.Definition.ID">Cancel</a>
            </div>

            <div class="col text-right">
                <button onclick="disableBeforeUnload()" type="submit" class="btn btn-danger btn-sm" asp-controller="Entities" asp-action="DeleteDefinition">Delete</button>
            </div>
        </div>
    </form>
</div>
