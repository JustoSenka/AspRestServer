
@{
    ViewData["Title"] = "Words";
}

<partial name="_WordNavigation" />

<div class="container">
    <form action="AddWordsComplete" method="post">
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>

        <div class="form-group row">
            <label for="words" class="col-sm-5 col-form-label">Words</label>
            <label for="trans" class="col-sm-7 col-form-label">Translations</label>
        </div>

        <div class="form-group row">
            <div class="col-sm-5">
                <textarea type="text" rows="50" class="form-control" id="words" name="words"> </textarea>
            </div>
            <div class="col-sm-7">
                <textarea type="text" rows="50" class="form-control" id="trans" name="trans"> </textarea>
            </div>
        </div>
    </form>
</div>
