@model BookIndexModel

@{
    ViewData["Title"] = "Books";
}

<partial name="_BookNavigation" />

@{
    var TableModel = new TableLinkModel()
    {
        Title = "Book count: " + Model.Books.Count(),
        TableElements = Model.Books.Select(b => TableElement.LinkMany(b.ID, b.Name, b.Description, b.WordCount.ToString())),
        TopHeader = new[] { "Name", "Description", "Word Count" },
        AspAction = "Book",
        AspController = "Books",
    };

    <partial name="_TableLinkPartial" for="@TableModel" />
}