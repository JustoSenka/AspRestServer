@model WordsModel;

@{
    ViewData["Title"] = "Words";
}

<partial name="_WordNavigation" />

<div class="container">
    <form action="AddWordsComplete" method="post">
        <div class="form-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </div>

        <div class="form-group row">
            <label for="from" class="col-sm-6 col-form-label">Words</label>
            <label for="to" class="col-sm-6 col-form-label">Translations</label>
        </div>

        <div class="form-group row">
            <div class="col-sm-6">
                <div class="dropdown" id="from">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                        Language From
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        @foreach (var lang in Model.AvailableLanguages)
                        {
                            <li><a href="#">@lang.Name</a></li>
                        }
                    </ul>
                </div>
    
            </div>
        </div>
    </form>
</div>
